@model List<TodoItems>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Todo App</title>
</head>
<body class="bg-gradient-to-br from-gray-900 to-gray-800 min-h-screen flex justify-center items-center p-6">

    <div class="backdrop-blur-md bg-white/10 border border-gray-700 rounded-2xl shadow-xl p-8 w-[500px] max-w-full">

        <!-- Title -->
        <h1 class="text-white text-3xl font-extrabold text-center mb-6">
            ✅ My Tasks
        </h1>

        <!-- Form -->
        <form method="post" action="add" class="flex gap-3">
            <input required
                   placeholder="Add a Task..."
                   class="bg-gray-800 text-white border border-gray-600 rounded-xl px-4 py-3 w-full focus:ring-2 focus:ring-indigo-400 focus:outline-none"
                   type="text" name="task" />
            <button type="submit"
                    class="bg-indigo-500 hover:bg-indigo-600 text-white px-6 py-3 rounded-xl font-semibold shadow-md transition-all active:scale-95">
                ➕
            </button>
        </form>

        <!-- Task List -->
        <ul class="bg-gray-800 mt-6 rounded-xl shadow-md p-4 divide-y divide-gray-700">
            @if (Model.Count > 0)
            {
                @foreach (TodoItems task in Model)
                {
                    <li class="flex justify-between items-center py-2">
                        <span class="text-white font-medium">@task.ID. @task.Task</span>
                        <form method="post" action="delete/@task.ID">
                            <button type="submit"
                                    class="text-red-400 hover:text-red-500 transition-all active:scale-90">
                                ❌
                            </button>
                        </form>
                    </li>
                }
            }
            else
            {
                <li class="text-gray-400 text-center py-1">No tasks yet. Add a new one! ✨</li>
            }
        </ul>

        <!-- Footer -->
        <p class="text-gray-400 text-center text-sm mt-6">📅 @DateTime.Now.ToString("MMMM dd, yyyy")</p>

    </div>

</body>
</html>

